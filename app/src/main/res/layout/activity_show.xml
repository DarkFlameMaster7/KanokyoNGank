<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    tools:context="me.tomoya.kanojyongank.module.gank.ui.ShowActivity"
    tools:ignore="RtlHardcoded"
>
  <include layout="@layout/view_toolbar_main"/>


  <me.tomoya.kanojyongank.widget.EzScrollViewPager
      android:id="@+id/vp_show"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="@dimen/activity_vertical_margin"
      android:layout_marginRight="@dimen/activity_vertical_margin"
      android:layout_marginTop="55dp"
      android:clipChildren="false"
      android:clipToPadding="false"
  />

  <me.tomoya.kanojyongank.widget.rhythm.RhythmView
      android:id="@+id/rhythm_view"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:scrollbars="none">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
    />
  </me.tomoya.kanojyongank.widget.rhythm.RhythmView>

</RelativeLayout>
